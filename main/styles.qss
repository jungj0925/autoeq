/* styles.qss */

/* Buttons */
QPushButton {
    background-color: #3498db;  /* Blue background */
    color: white;
    border: none;
    border-radius: 5px;
    padding: 5px 20px;  /* More padding for a better touch target */
    font-size: 12px;
}

QPushButton:hover {
    background-color: #2980b9;  /* Darker blue on hover */
}
